<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:backgroundTint="#FFFF"
    xmlns:tools="http://schemas.android.com/tools"
    tools:targetApi="lollipop">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="7dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/workmate_image_for_restaurant_details"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@color/yellow_star_background" />

        <TextView
            android:id="@+id/workmate_name_text_for_restaurant_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="23dp"
            android:layout_toEndOf="@id/workmate_image_for_restaurant_details"
            android:maxLines="1"
            android:textColor="#97000000"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:text="@string/scarlett_text" />

        <TextView
            android:id="@+id/is_joining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="23dp"
            android:layout_toEndOf="@+id/workmate_name_text_for_restaurant_details"
            android:maxLines="1"
            android:text="@string/is_joining_text"
            android:textColor="#97000000"
            android:textSize="15sp"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>