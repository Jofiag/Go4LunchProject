<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#FFFF"
    xmlns:tools="http://schemas.android.com/tools">
<!--    tools:targetApi="lollipop">-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="7dp">

        <TextView
            android:id="@+id/restaurant_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/how_far_text_view"
            android:layout_marginBottom="11dp"
            tools:text="@string/oc_pizza_text"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:maxLines="1"
            android:ellipsize="end"/>
<!--        android:textColor="#97000000"-->
<!--        android:textStyle="bold"-->

        <TextView
            android:id="@+id/food_country_and_address_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/restaurant_name_text_view"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="7dp"
            android:layout_toStartOf="@+id/avatar_image_view"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#97000000"
            android:textSize="13sp"
            tools:text="@string/food_country_and_address_text" />

        <TextView
            android:id="@+id/close_time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/food_country_and_address_text_view"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="17dp"
            tools:text="@string/until_text"
            android:textSize="13sp"
            android:textColor="#97000000"
            android:textStyle="italic"/>

        <ImageView
            android:id="@+id/restaurant_image_view"
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/restaurant_image_text"
            app:srcCompat="@drawable/oc_pizza_4_small" />

        <TextView
            android:id="@+id/how_far_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="17dp"
            android:layout_toStartOf="@+id/restaurant_image_view"
            android:ellipsize="end"
            android:textColor="#C2BCBC"
            tools:text="@string/m_text"
            android:singleLine="true" />


        <TextView
            android:id="@+id/number_of_interested_workmate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/how_far_text_view"
            android:layout_toStartOf="@id/restaurant_image_view"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="11dp"
            tools:text="@string/parentheses_text"
            android:textColor="#97000000"
            android:textSize="12sp"/>

        <ImageView
            android:id="@+id/avatar_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/how_far_text_view"
            android:layout_toStartOf="@+id/number_of_interested_workmate"
            android:layout_marginTop="7dp"
            android:contentDescription="@string/avatar_image_text"
            app:srcCompat="@drawable/baseline_perm_identity_24" />

        <ImageView
            android:id="@+id/yellow_star_1"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_below="@+id/avatar_image_view"
            android:layout_toStartOf="@+id/restaurant_image_view"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="11dp"
            android:contentDescription="@string/yellow_start_image_text"
            app:srcCompat="@drawable/yellow_star_c_foreground" />

        <ImageView
            android:id="@+id/yellow_star_2"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_below="@+id/avatar_image_view"
            android:layout_toStartOf="@+id/yellow_star_1"
            android:layout_marginTop="7dp"
            android:contentDescription="@string/yellow_start_image_text"
            app:srcCompat="@drawable/yellow_star_c_foreground" />

        <ImageView
            android:id="@+id/yellow_star_3"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_below="@+id/avatar_image_view"
            android:layout_toStartOf="@+id/yellow_star_2"
            android:layout_marginTop="7dp"
            android:contentDescription="@string/yellow_start_image_text"
            app:srcCompat="@drawable/yellow_star_c_foreground"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>