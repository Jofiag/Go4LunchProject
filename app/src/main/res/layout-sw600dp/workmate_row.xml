<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:backgroundTint="#FFFF"
    xmlns:tools="http://schemas.android.com/tools"
    tools:targetApi="lollipop">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="7dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/workmate_image_for_restaurant_details"
            android:layout_width="87dp"
            android:layout_height="87dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@color/yellow_star_background" />

        <TextView
            android:id="@+id/workmate_name_text_for_restaurant_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="23dp"
            android:layout_toEndOf="@id/workmate_image_for_restaurant_details"
            android:maxLines="1"
            android:textColor="#97000000"
            android:textSize="29sp"
            android:textStyle="bold"
            tools:text="@string/scarlett_text" />

        <TextView
            android:id="@+id/is_eating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="23dp"
            android:layout_toEndOf="@+id/workmate_name_text_for_restaurant_details"
            android:text="@string/is_eating_text"
            android:textColor="#97000000"
            android:textSize="29sp"
            android:maxLines="1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/food_country_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="23dp"
            android:layout_toEndOf="@+id/is_eating"
            android:textColor="#97000000"
            android:textSize="29sp"
            android:textStyle="bold"
            android:maxLines="1"
            tools:text="@string/french_scarlett_text" />

        <TextView
            android:id="@+id/restaurant_name_workmate_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="7dp"
            android:layout_toEndOf="@+id/food_country_text_view"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#97000000"
            android:textSize="29sp"
            android:textStyle="bold"
            tools:text="@string/parentheses_name_text" />

        <TextView
            android:id="@+id/has_not_decided_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/workmate_image_for_restaurant_details"
            android:layout_marginTop="23dp"
            android:layout_marginStart="21dp"
            android:textSize="29sp"
            android:textColor="@color/my_gray"
            android:textStyle="italic"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>